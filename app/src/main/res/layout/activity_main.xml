<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="8dp"
    android:background="@drawable/background"
    app:layout_constraintRight_toRightOf="@+id/textView"
    tools:context="com.example.siddh.hikerseye.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/latTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="207dp"
        android:alpha="1"
        android:text="Latitude :  "
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/longTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="236dp"
        android:alpha="1"
        android:text="Longitude :  "
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/latTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/accuracyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="263dp"
        android:alpha="1"
        android:text="Accuracy :  "
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="@+id/longTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/altTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="292dp"
        android:alpha="1"
        android:text="Altitude :  "
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/accuracyTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="350dp"
        android:alpha="1"
        android:text="Address :\n"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/altTextView"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>